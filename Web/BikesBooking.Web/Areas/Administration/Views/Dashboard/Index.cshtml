@model IEnumerable<BikesBooking.Data.Models.Motorcycle>

@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Dashboard</h1>
<br />
<hr />
<div class="row">
    <div class="card offset-md-2" style="width: 18rem;">
        <img class="card-img-top pb-5" src="/img/MotorDashboard.jpg" alt="Card image cap">
        <div class="card-body pt-4">
            <h5 class="card-title text-center">Motorcycles</h5>
            <p class="card-text pt-2">Section reserved for admins, here it is possible to modify every single component of the bike and approve it.</p>
            <a asp-area="Administration" asp-controller="Motorcycles" asp-action="Index" class="btn btn-primary md-2 offset-4">Motorcycles</a>
        </div>
    </div>
    <div class="card mr-4 ml-4" style="width: 18rem;">
        <img class="card-img-top pb-5" src="/img/MotorDealers.jpg" alt="Card image cap">
        <br />
        <div class="card-body">
            <h5 class="card-title text-xl-center pt-2">Dealers</h5>
            <p class="card-text pt-2">Dedicated section for the management of each individual dealer. Accout modification, cancellation, modification.</p>
            <a asp-area="Administration" asp-controller="Dealers" asp-action="Index" class="btn btn-primary md-2 offset-4">Dealers</a>
        </div>
    </div>
    <div class="card" style="width: 18rem;">
        <img class="card-img-top pb-5" src="/img/Client.jpg" alt="Card image cap">
        <div class="card-body">
            <h5 class="card-title text-center pt-4">Client</h5>
            <p class="card-text pt-3">Dedicated section for the management of each individual client. Accout modification, cancellation, modification.</p>
            <a asp-area="Administration" asp-controller="Clients" asp-action="Index" class="btn btn-primary md-2 offset-4">Clients</a>
        </div>
    </div>
</div>
