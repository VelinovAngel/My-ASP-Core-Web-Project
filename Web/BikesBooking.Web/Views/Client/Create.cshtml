@model BecomeClientFromModel

@{
    this.ViewData["Title"] = "Become Client";
}



<h4 class="font-weight-bold text-md-center">About you</h4>

<br />

<div class="container mb-5">
    <form method="post" class="container lead-section col-md-6 offset-md-3">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" placeholder="Es: Angel Velinov.." />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Address"></label>
            <input asp-for="Address" class="form-control" placeholder="Es: ul.Chemshir n7.." />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <br />

        <button type="submit" class="btn btn-primary">Become Client</button>

    </form>
</div>