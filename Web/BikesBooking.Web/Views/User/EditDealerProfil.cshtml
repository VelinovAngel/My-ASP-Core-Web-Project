@model BecomeDealerFormModel

@{
    this.ViewData["Title"] = "Become Delaer";
}



<h4 class="font-weight-bold text-md-center">Here can change your company info.</h4>
<h4 class="font-weight-bold text-md-center">Complete the information about your company!</h4>

<br />

<div class="container mb-5">
    <form method="post" class="container lead-section col-md-6 offset-md-3">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" placeholder="Es: CmtMotors.." />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger" placeholder="Es: CmtMotors@gmail.com.."></span>
        </div>

        <div class="form-group">
            <label asp-for="City"></label>
            <input asp-for="City" class="form-control" placeholder="Es: Plovdiv.." />
            <span asp-validation-for="City" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Country"></label>
            <input asp-for="Country" class="form-control" placeholder="Es: Bulgaria.." />
            <span asp-validation-for="Country" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Address"></label>
            <input asp-for="Address" class="form-control" placeholder="Es: ul.Chemshir n7.." />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description"></label>
            <input asp-for="Description" class="form-control" placeholder="I'm a big dealer'" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <br />

        <button type="submit" class="btn btn-primary">Save</button>

    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}