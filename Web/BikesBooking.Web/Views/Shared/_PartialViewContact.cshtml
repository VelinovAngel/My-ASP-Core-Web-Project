@using BikesBooking.Common
@using BikesBooking.Data.Models
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@inject IDealersService Dealers

@if (this.SignInManager.IsSignedIn(this.User))
{
    var userId = User.GetId();
    var userIsDealer = Dealers.IsDealer(userId);
    @if (userIsDealer)
    {

        <li class="nav-item m-sm-2">
            <a class="nav-link btn btn-outline-dark" asp-controller="Contact" asp-action="ClientMessages">Client Messages</a>
        </li>
    }

}
<li class="nav-item m-md-2">
    <a class="nav-link btn btn-outline-dark" asp-controller="Contact" asp-action="Contact">Contact Us</a>
</li>