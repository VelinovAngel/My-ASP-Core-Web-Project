@model ContactFormDto

@{ 
    this.ViewData["Title"] = "Details Messages";
}


<section class="py-5">
    <div class="container">
        <h1 style="margin: 2%; text-align: center;">Details for messsage:</h1>
        <div>
            <div class="form-group">
                <label asp-for="Username" class="font-weight-bold">Client Name</label>
                <h5 type="text" readonly class="form-control">@Model.Username</h5>
            </div>

            <div class="form-group">
                <label asp-for="Complaint" class="font-weight-bold">Subject</label>
                <h5 type="text" readonly class="form-control">@Model.Complaint</h5>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="font-weight-bold">Description</label>
                <textarea type="text" readonly class="form-control">@Model.Description</textarea>
            </div>

            <div class="form-group">
                <label asp-for="CreatedOn" class="font-weight-bold" >Date of sending</label>
                <h5 type="text" readonly class="form-control">@Model.CreatedOn.ToShortDateString()</h5>
            </div>
        </div>
        <div class="text-center text-md-left mt-3">
            <a type="submit" class="btn btn-primary offset-6" asp-controller="Contact" asp-action="SendEmailToUser" asp-route-id="@Model.Id">Send Email</a>
        </div>
        <div class="status"></div>
    </div>
</section>